<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical|center_horizontal"
		    android:orientation="vertical"
		    android:padding="@dimen/window_pading" >
		   
		    <TextView
		        android:id="@+id/textView3"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text="Внесите изменения"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		
		    <TextView
		        android:id="@+id/fragment_tarif_change_textview_cancel_link"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_marginTop="10dp"
		        android:paddingLeft="2dp"
		        android:text="ФИО : *"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
		    <EditText
		        android:id="@+id/fragment_agreement_edit_edittext_surname"
		        style="@style/style_edittext_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/session_register_edittext_surname_hint"
		        android:inputType="textPersonName" >
		        
		        <requestFocus />        
		    </EditText>
		    
		    <EditText
		        android:id="@+id/fragment_agreement_edit_edittext_name"
		        style="@style/style_edittext_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/session_register_edittext_name_hint"
		        android:inputType="textPersonName" >
		 
		    </EditText>
		    
		    <EditText
		        android:id="@+id/fragment_agreement_edit_edittext_patr"
		        style="@style/style_edittext_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/session_register_edittext_patr_hint"
		        android:inputType="textPersonName" >
		 
		    </EditText>
		
		    <TextView
		        android:id="@+id/TextView023"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_marginTop="10dp"
		        android:paddingLeft="2dp"
		        android:text="Контакты:"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		
		    <EditText
		        android:id="@+id/fragment_agreement_edit_edittext_email"
		        style="@style/style_edittext_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/session_register_edittext_email_hint"
		        android:inputType="textEmailAddress" >
		        
		    </EditText>
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/drawable_edittext" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@color/color_transparent"
		            android:gravity="center"
		            android:paddingBottom="10dp"
		            android:paddingLeft="10dp"
		            android:paddingTop="10dp"
		            android:text="+7"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		
		        <EditText
		            android:id="@+id/fragment_agreement_edit_edittext_phone"
		            style="@style/style_edittext_dialog"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:background="@color/color_transparent"
		            android:ems="10"
		            android:hint="@string/session_register_edittext_phone_hint"
		            android:inputType="phone" />
		
		    </LinearLayout>
		
		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
		    android:orientation="vertical" >
		    
		    <TextView
		        android:id="@+id/TextView02"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:text="Введите пароль"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
		    <EditText
		        android:id="@+id/fragment_agreement_edit_edittext_password"
		        style="@style/style_edittext_dialog"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:gravity="center"
		        android:hint="@string/fragment_agreement_edit_edittext_hint"
		        android:inputType="numberDecimal"
		        android:maxLength="10" >
		        
		    </EditText>
		    
		    <Button
		        android:id="@+id/fragment_agreement_edit_button_send"
		        style="@style/style_button_dialog"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="@string/fragment_agreement_edit_button_send" />
		
		    <Button
		        android:id="@+id/fragment_agreement_edit_button_cancel"
		        style="@style/style_button_dialog_alter"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/fragment_agreement_edit_button_cancel" />
		    
		</LinearLayout>
		
	</LinearLayout>		
	
</ScrollView>