<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/window_pading" xmlns:app1="http://schemas.android.com/apk/res/com.ivanov.tech.session">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/fragment_demo_textview_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/fragment_demo_textview_login"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/fragment_demo_textview_login_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(login)"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <Button
        android:id="@+id/fragment_demo_button_signout"
        style="@style/style_button_dialog_alter"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/fragment_demo_button_signout" />

    <LinearLayout
        android:id="@+id/fragment_demo_layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_demo_layout_internet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
	
	        <TextView
	            android:id="@+id/fragment_demo_textview_internet"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="5dp"
	            android:text="@string/fragment_demo_textview_internet"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	
	        <TextView
	            android:id="@+id/fragment_demo_textview_internet_on"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/fragment_demo_textview_internet_on"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/color_green" 
				android:visibility="gone" />
	        
	    </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/fragment_demo_switch_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textOff="OFF"
            android:textOn="ON"
            android:thumb="@drawable/switcher_thumb"
            app:showText="true"
            app:switchTextAppearance="@style/SwitchInternetTheme"
            app:track="@drawable/switcher_track"
            android:enabled="false"/>
        
    </LinearLayout>

</LinearLayout>