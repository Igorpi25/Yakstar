<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1.0"
	    android:background="@color/color_white"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >
	
	    <LinearLayout
	        android:id="@+id/fragment_demo_layout_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:background="@color/color_white"
	        android:gravity="center_horizontal"
	        android:orientation="vertical"
	        android:padding="10dp" >
	        
	        <android.support.v7.widget.RecyclerView
	            android:id="@+id/fragment_demo_recyclerview_info"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" />
	
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/fragment_demo_layout_internet"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1.0"
	        android:background="@color/color_white"
	        android:gravity="center"
	        android:orientation="vertical"
	        android:visibility="visible" >
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:orientation="horizontal" >
		
		        <TextView
		            android:id="@+id/fragment_demo_textview_internet"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="5dp"
		            android:text="@string/fragment_demo_textview_internet"
		            android:textAppearance="?android:attr/textAppearanceSmall" />
		
		        <TextView
		            android:id="@+id/fragment_demo_textview_internet_value"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/fragment_demo_textview_internet_on"
		            android:textAppearance="?android:attr/textAppearanceSmall"
		            android:textColor="@color/color_green"
		            android:visibility="gone" />
		        
		    </LinearLayout>
	
	        <android.support.v7.widget.SwitchCompat
	            android:id="@+id/fragment_demo_switch_internet"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:textOff="OFF"
	            android:textOn="ON"
	            android:thumb="@drawable/switcher_thumb"
	            app:showText="true"
	            app:switchTextAppearance="@style/SwitchInternetTheme"
	            app:track="@drawable/switcher_track"
	            android:enabled="false"/>
	        
	    </LinearLayout>
	    
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_mat"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_demo_textview_gov_summary"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/fragment_demo_textview_gov_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_demo_textview_gov_link"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</LinearLayout>