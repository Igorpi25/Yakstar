<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/window_pading" >

    <EditText
        android:id="@+id/fragment_register_edittext_name"
        style="@style/style_edittext_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/session_register_edittext_name_hint"
        android:inputType="textPersonName" >        
        <requestFocus />        
    </EditText>

    <EditText
        android:id="@+id/fragment_register_edittext_email"
        style="@style/style_edittext_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/session_register_edittext_email_hint"
        android:inputType="textEmailAddress" >        
    </EditText>

    <EditText
        android:id="@+id/fragment_register_edittext_password"
        style="@style/style_edittext_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/session_register_edittext_password_hint"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/fragment_register_button_register"
        style="@style/style_button_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/window_pading"
        android:text="@string/session_register_button_register_text" />

    <Button
        android:id="@+id/fragment_register_button_to_login"
        style="@style/style_button_dialog_alter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/session_register_button_to_login_text" />

</LinearLayout>