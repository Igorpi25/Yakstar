<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:gravity="center_vertical|center_horizontal"
		    android:orientation="vertical"
		    android:padding="@dimen/window_pading" >
		   
		    <TextView
		        android:id="@+id/textView3"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text="Заполните форму регистрации"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		
		    <TextView
		        android:id="@+id/TextView01"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_marginTop="10dp"
		        android:paddingLeft="2dp"
		        android:text="ФИО : *"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
		    <EditText
		        android:id="@+id/fragment_register_edittext_surname"
		        style="@style/style_edittext_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/session_register_edittext_surname_hint"
		        android:inputType="textPersonName" >
		        
		        <requestFocus />        
		    </EditText>
		    
		    <EditText
		        android:id="@+id/fragment_register_edittext_name"
		        style="@style/style_edittext_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/session_register_edittext_name_hint"
		        android:inputType="textPersonName" >
		 
		    </EditText>
		    
		    <EditText
		        android:id="@+id/fragment_register_edittext_patr"
		        style="@style/style_edittext_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/session_register_edittext_patr_hint"
		        android:inputType="textPersonName" >
		 
		    </EditText>
		
		    <TextView
		        android:id="@+id/textView2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_marginTop="10dp"
		        android:paddingLeft="2dp"
		        android:text="Контакты:"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		
		    <EditText
		        android:id="@+id/fragment_register_edittext_email"
		        style="@style/style_edittext_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/session_register_edittext_email_hint"
		        android:inputType="textEmailAddress" >
		        
		    </EditText>
		
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/drawable_edittext" >
		
		        <TextView
		            android:id="@+id/textView1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@color/color_transparent"
		            android:gravity="center"
		            android:paddingBottom="10dp"
		            android:paddingLeft="10dp"
		            android:paddingTop="10dp"
		            android:text="+7"
		            android:textAppearance="?android:attr/textAppearanceMedium" />
		
		        <EditText
		            android:id="@+id/fragment_register_edittext_phone"
		            style="@style/style_edittext_dialog"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:background="@color/color_transparent"
		            android:ems="10"
		            android:hint="@string/session_register_edittext_phone_hint"
		            android:inputType="phone" />
		
		    </LinearLayout>
		
		    <TextView
		        android:id="@+id/TextView02"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:layout_marginTop="10dp"
		        android:paddingLeft="2dp"
		        android:text="Пасспортные данные: *"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
		    <EditText
		        android:id="@+id/fragment_register_edittext_passport_num"
		        style="@style/style_edittext_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/session_register_edittext_passport_num_hint"
		        android:inputType="numberDecimal"
		        android:maxLength="10" >
		        
		    </EditText>
		    
		    <EditText
		        android:id="@+id/fragment_register_edittext_passport_who"
		        style="@style/style_edittext_dialog"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:ems="10"
		        android:hint="@string/session_register_edittext_passport_who_hint"
		        android:inputType="text" >        
		    </EditText>
		    
		    <Button
		        android:id="@+id/fragment_register_button_next_second"
		        style="@style/style_button_dialog"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/window_pading"
		        android:text="@string/session_register_button_next_second" />
		
		    <Button
		        android:id="@+id/fragment_register_button_cancel"
		        style="@style/style_button_dialog_alter"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/session_register_button_cancel" />
		
		</LinearLayout>
	
</ScrollView>