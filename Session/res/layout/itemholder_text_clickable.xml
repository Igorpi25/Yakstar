<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_item"
    android:gravity="center_vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/itemholder_text_textview_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/window_pading"
        android:text="Key"
        android:textColor="@color/color_selector_font"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/itemholder_text_textview_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/itemholder_text_textview_key"
        android:text="Value"
        android:ellipsize="end"
        android:textColor="@color/color_selector_font" />

    <ImageView
        android:id="@+id/itemholder_text_imageview_icon"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_item_more" />

    

</RelativeLayout>
