<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<LinearLayout
	    android:id="@+id/fragment_agreement_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1.0"
	    android:background="@color/color_white"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	    android:padding="10dp" >
	
		<android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_agreement_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

		<Button
	        android:id="@+id/fragment_agreement_button_edit"
	        style="@style/style_button_dialog"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/window_pading"
	        android:text="@string/fragment_agreement_button_edit" />
	
	    <Button
	        android:id="@+id/fragment_agreement_button_back"
	        style="@style/style_button_dialog_alter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/fragment_agreement_button_back" />
	
	</LinearLayout>

</LinearLayout>