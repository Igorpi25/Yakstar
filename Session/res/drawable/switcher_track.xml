<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_enabled="false">
		<shape android:shape="rectangle"
			android:visible="true"
			android:dither="true"
			android:useLevel="false">
	
			<gradient android:startColor="@color/color_gray"
				android:endColor="@color/color_gray_light"
				android:angle="270"/>
				
			<corners android:radius="25dp"/>
			
			<size android:width="200dp"
				android:height="50dp" />
		</shape>		
	</item>
	
	<item android:state_checked="true">
		<shape android:shape="rectangle"
			android:visible="true"
			android:dither="true"
			android:useLevel="false">	
			<gradient android:startColor="@color/color_green"
				android:endColor="@color/color_green_light"
				android:angle="270"/>		
						
			<corners android:radius="25dp"/>
						
			<size android:width="200dp"
				android:height="50dp" />
		</shape>
		
	</item>
	
    <item android:state_checked="false">
		<shape android:shape="rectangle"
			android:visible="true"
			android:dither="true"
			android:useLevel="false">
	
			<gradient android:startColor="@color/color_red"
				android:endColor="@color/color_red_light"
				android:angle="270"/>
				
			<corners android:radius="25dp"/>
			
			<size android:width="200dp"
				android:height="50dp" />
		</shape>		
	</item>
	
    
	
</selector>